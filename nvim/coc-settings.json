{
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "snippets.extends": {
    "cpp": ["c"],
    "typescript": ["javascript"]
  },
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  "clangd.path": "/usr/local/opt/llvm/bin/clangd",
  "pyright.enable": true,
  "pyright.organizeimports.provider": "isort",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/opt/homebrew/bin/autopep8",
  "python.sortImports.path": "/opt/homebrew/bin/isort",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "signature.enable": false,
  "vetur.format.enable": true,
  "vetur.completion.autoImport": true,
  "vetur.languageFeatures.updateImportOnFileMove": true,
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.defaultFormatter.css": "prettier",
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true,
      "tabSize": 2
    }
  },
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "prettier.singleQuote": true,
  "javascript.preferences.quoteStyle": "single",
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.hover": true
}
